{% extends 'main.html.twig' %}

{% block viewContainer %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg">
            <div class="card border-0 of-task-card bg-transparent">
                <div class="card-header bg-transparent of-card-header">
                    <h2 class="of-text-engaging">What do you want to accomplish next?</h2>
                </div>
                <div class="card-body p-4 bg-transparent">
                    <div class="input-group">
                        {{ form_widget(form.title) }}
                        <div class="input-group-append">
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock viewContainer %}